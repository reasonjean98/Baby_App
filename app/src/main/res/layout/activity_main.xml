<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/EdittextTheme">


    <EditText
        android:id="@+id/search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weather"
        android:singleLine="true" />


    <Button
        android:id="@+id/search_btn"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/search"
        android:background="#FFCCCC"
        android:text="검색"
        android:textSize="20dp" />

    <Button
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_btn"
        android:layout_marginBottom="1dp"
        android:width="412dp"
        android:height="126dp"
        android:background="#FF9999"
        android:drawableLeft="@drawable/smile_sun"
        android:drawableRight="@drawable/smile_sun"
        android:padding="40dp"
        android:text="오늘의 날씨"
        android:textColor="#000"
        android:textSize="24dp" />

    <Button
        android:id="@+id/library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather"
        android:layout_marginRight="206dp"
        android:layout_marginBottom="1dp"
        android:width="205dp"
        android:height="178dp"
        android:background="#FF9999"
        android:drawableTop="@drawable/man"
        android:padding="40dp"
        android:text="도서관"
        android:textColor="#000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/park"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather"
        android:layout_marginLeft="206dp"
        android:layout_marginBottom="1dp"
        android:width="205dp"
        android:height="178dp"
        android:background="#FF9999"
        android:drawableTop="@drawable/park"
        android:padding="40dp"
        android:text="공원"
        android:textColor="#000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/museum_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/library"
        android:layout_marginBottom="1dp"
        android:width="205dp"
        android:height="152dp"
        android:background="#FF9999"
        android:drawableTop="@drawable/exhibition"
        android:padding="32dp"
        android:text="박물관 및 미술관"
        android:textColor="#000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/perform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/park"
        android:layout_marginLeft="206dp"
        android:layout_marginBottom="1dp"
        android:width="205dp"
        android:height="152dp"
        android:background="#FF9999"
        android:drawableTop="@drawable/perform"
        android:padding="30dp"
        android:text="공연"
        android:textColor="#000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/field_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/museum_art"
        android:layout_marginBottom="1dp"
        android:width="205dp"
        android:height="152dp"
        android:background="#FF9999"
        android:drawableTop="@drawable/bus"
        android:padding="30dp"
        android:text="체험 학습"
        android:textColor="#000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/toilet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/perform"
        android:layout_marginLeft="206dp"
        android:layout_marginBottom="1dp"
        android:width="205dp"
        android:height="152dp"
        android:background="#FF9999"
        android:drawableTop="@drawable/toilet"
        android:padding="30dp"
        android:text="화장실"
        android:textColor="#000"
        android:textSize="20dp" />
</RelativeLayout>