<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/firstscreen</item>
    </style>

    <style name="EdittextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#FFCCCC</item>
        <item name="colorControlNormal">#FFCCCC</item>
    </style>
</resources>
